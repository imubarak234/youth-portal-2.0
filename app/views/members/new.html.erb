<!DOCTYPE html>
<html>
  <head>
    <title>Youth Portal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
  </head>

  <body>
    <%= yield %>
    
    <%= form_with model: @member_new, url: members_path, method: :post, class: "h-100 border d-flex flex-column justify-content-between", novalidate: true, local: true, scope: :groups do |f|  %>

      <div class="h-50 d-flex flex-column justify-content-around">
        <div class="field">
          <div class = "input-group has-validation">
            <%= f.label :Full_Name, for: "name" %><br>
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full name", class: "form-control", required: true, id: "name"%>
            <div class="invalid-feedback">
              Please Enter Full Name.
            </div>
          </div>
        </div>

        <div class="field">
          <div class="input-group has-validation">
            <%= f.label :Member_Role, for: "role" %>
            <%= f.select :nature_of_support_group, ['Chairman', 'Vice Chairman', 'General Secretary', 'Legal Advidor', 'Other'], { class: "form-control", id: "role" }%>
          </div> 
        </div>

        <div class="field">
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepending">@</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "validationEmail_news", class: "form-control py-2", 
            required: true, placeholder: "Email"
            %>
            <div class="invalid-feedback">
                Please Enter an Email Address.
            </div>
          </div> 
        </div>

        <div class="field">
          <div class = "input-group has-validation">
            <%= f.label :Phone_Number, for: "phone" %><br>
            <%= f.text_field :phone_number, class: "form-control", required: true, id: "phone"%>
            <div class="invalid-feedback">
              Please Enter Phone Number.
            </div>
          </div>
        </div>

        <div class="d-flex flex-wrap justify-content-evenly my-3">
        <p>Active Region</p>
          <div class="form-check">
            <%= f.radio_button :active_region, 'North-West', class: "form-check-input" %>
            <label class="form-check-label">
              North-West
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :active_region, 'North-East', class: "form-check-input" %>
            <label class="form-check-label">
              North-East
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :active_region, 'North-Central', class: "form-check-input" %>
            <label class="form-check-label">
              North-Central
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :active_region, 'South-West', class: "form-check-input" %>
            <label class="form-check-label">
              South-West
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :active_region, 'South-East', class: "form-check-input" %>
            <label class="form-check-label">
              South-East
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :active_region, 'South-South', class: "form-check-input" %>
            <label class="form-check-label">
              South-South
            </label>
          </div>
        </div>
        
      </div>
      


      <div class="d-flex flex-column links_foot_cat align-items-center w-100 p-3 border">
        <%= f.submit "Save", class: "p-2 lead text-decoration-none btn text-center border"%>
      </div>
      
    <% end %>
  </body>
  
</html>
